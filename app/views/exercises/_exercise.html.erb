<%= table_for(exercise.rounds, :html => { :class => 'sets_table'}) do |t| %>
  <%= t.head do %>
    <%= t.r do %>
      <th colspan="3" style="background-color: #DDD;"><%= link_to exercise.name, chart_exercise_path(exercise), remote: true %></th>
    <% end %>
    <%= t.r do %>
      <%= t.h('Set') %>
      <%= t.h('Reps') %>
      <%= t.h('Weight') %>
    <% end %>
  <% end %>
  <% x = 1 %>
  <%= t.body do |round| %>
    <%= t.r do %>
      <%= t.d("Set #{x}") %>
      <%= t.d(h(round.reps)) %>
      <%= t.d(h(round.weight)) %>
      <% x +=1 %>
    <% end %>
  <% end %>
  <th colspan="3"><%= link_to "Add Sets", new_user_workout_exercise_round_path(exercise.workout.user, exercise.workout, exercise), remote: true %></th>
<% end %>



