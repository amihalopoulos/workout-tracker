<div id="user_info">
  <div id="user_image"><img src="https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAAKtAAAAJGRlNTY2OGUxLTRkOWYtNDQ4Ny1hN2I4LTM0NzhhMTYyOGQyNQ.jpg" alt="" id="user_pic">
  </div>
  <div id="user_about">
    <h1><%= @user.name %></h1>
    <h5>Last Workout:</h5> <%= @recent_workouts.last.date %><!-- make days ago -->
    <h5>Points: </h5> 1,000
    <h5>Streak: </h5> 1 day
  </div>
  <div id="this_week">
    <h1>Past Week:</h1>
    <% @recent_workouts.each do |workout| %>
      <p>You completed <%= workout.name %> workout on <%= workout.date %></p>
    <% end %>
    <!-- <p><%= link_to "Add New Workout", new_user_workout_path(user_id: @user.id) %></p> -->
    <p><%= link_to_modal "Add New Workout", "#demo-form", :class=>"button" %></p>

  </div>
</div>




<div id="calendar_header">
  <h2 id="month">
    <%= button_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m"), :method => "get" %>
    <%=h @date.strftime("%B %Y") %>
    <%= button_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m"), :method => "get" %>
  </h2>
</div>
<div id="calender">
<%= calendar_for @user.workouts, :year => @date.year, :month => @date.month do |t| %>
  <%= t.head( 'sun', 'mon', 'tue', 'wed', 'thu', 'fri', 'sat') %>
  <%= t.day do |day, workouts| %>
    <%= day.day %>
      <ul>
        <% for workout in workouts %>
          <li><%= link_to workout.name, user_workout_path(workout.user, workout) %></li>
        <% end %>
      </ul>
  <% end %>
<% end %>

</div>

<div id="demo-form" class="demo-description" style="display: none; ">
  <%= render 'workouts/new', locales: {user: @user} %>
  <br>
  <%= button_to "Finished", user_path(@user), :method => "get", class: "non-form-button" %>
</div>

