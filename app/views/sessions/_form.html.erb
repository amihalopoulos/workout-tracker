<div class="form">
  <%= form_for @user, url: session_path do |f| %>

    <h2>Sign In</h2>

    <div class="input_label_pair">
    <%= f.label :name, "Username: " %>
    <%= f.text_field :name %>
    </div>

    <div class="input_label_pair">
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %>
    </div>

    <div class="input_label_pair">
    <%= f.submit 'Sign In' %>
    </div>

  <% end %>
  <p>or</p>
  <%= link_to "Sign Up", signup_path, remote: true %>
</div>