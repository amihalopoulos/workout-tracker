<% if @exercise %>
  <%= render 'exercises/summary' %>
<%= content_tag :div, "", id: "exercise_chart", data: {exercise: @exercise.get_one_rep_dataset} %>

<% else %>
  <p>No results for this exercise</p>
<% end %>

<script>
  new Morris.Line({

  element: 'exercise_chart',

  data: $('#exercise_chart').data('exercise'),

  xkey: 'date',

  ykeys: ['weight'],

  labels: ['Calculated 1RPM']
});

</script>